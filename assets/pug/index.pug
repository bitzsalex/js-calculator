doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Calculator in Vanilla JavaScript

        // including favicons
        link(rel='apple-touch-icon', sizes='120x120', href='/favicon/apple-touch-icon.png')
        link(rel='icon', type='image/png', sizes='32x32', href='/favicon/favicon-32x32.png')
        link(rel='icon', type='image/png', sizes='16x16', href='/favicon/favicon-16x16.png')
        link(rel='manifest', href='/favicon/site.webmanifest')
        link(rel='mask-icon', href='/favicon/safari-pinned-tab.svg', color='#5bbad5')
        link(rel='shortcut icon', href='/favicon/favicon.ico')
        meta(name='msapplication-TileColor', content='#da532c')
        meta(name='msapplication-config', content='/favicon/browserconfig.xml')
        meta(name='theme-color', content='#ffffff')

        // including stylesheets
        link(rel="stylesheet", href="/css/main.css")

        // include google fonts
        link(rel="preconnect", href="https://fonts.googleapis.com")
        link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;700&family=Poppins:wght@300;400;600&display=swap", rel="stylesheet")

        // including feather icons
        script(src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.29.1/feather.min.js", defer)

        // including the main js file
        script(src="/js/main.js", defer)
    body.dark-theme
        main.flex.flex--m-center.flex--a-center
            .calculator.flex
                .calculator__history
                    ul.history__list
                        li.history
                            span.history__expression 78x23
                            span.history__result 1,794

                .flex.flex--column
                    .screen
                        .screen__header.flex.flex--m-between
                            .type.flex.flex--a-center
                                .type__group.flex.flex--a-center.flex--m-center
                                    input.type__input(type="radio", name="type", value="simple", id="simple", checked)
                                    label.type__label(for="simple", title="Simple")
                                        i(data-feather="grid")
                                .type__group.flex.flex--a-center.flex--m-center
                                    input.type__input(type="radio", name="type", value="scientific", id="scientific")
                                    label.type__label(for="scientific", title="Scientific")
                                        i(data-feather="cpu")
                                .type__group.flex.flex--a-center.flex--m-center
                                    input.type__input(type="radio", name="type", value="units", id="units")
                                    label.type__label(for="units", title="Units")
                                        i(data-feather="sliders")

                            button#theme-toggler.btn.theme__btn(type="button")
                                span.theme__icon.theme__icon--sun #[i(data-feather="sun")]
                                span.theme__icon.theme__icon--moon #[i(data-feather="moon")]

                        .screen__display
                            .screen__basic.flex.flex--column
                                textarea.screen__input.screen__input--input(name="input", id="input", cols="30", rows="10")
                                input.screen__input.screen__input--result(type="text", name="result", id="result")
                            .screen__unit
                                .screen__group
                                    .screen__group__item
                                        .select
                                            span.select__placeholder Choose one
                                            span.select__arrow #[i(data-feather="chevron-down")]

                                            ul.select__options
                                                li
                                                    input.select__input(type="radio", name="option1", id="option1")
                                                    label.select__label(for="option1") Area and area and something
                                                li
                                                    input.select__input(type="radio", name="option1", id="option2")
                                                    label.select__label(for="option2") Area
                                                li
                                                    input.select__input(type="radio", name="option1", id="option3")
                                                    label.select__label(for="option3") Area
                                        .screen__group__input
                                            input.screen__input(type="text", name="input", id="group1")
                                            label.screen__label(for="group1") m#[sup 2]
                                    .screen__group__item
                                        .select
                                            span.select__placeholder Choose one
                                            span.select__arrow #[i(data-feather="chevron-down")]

                                            ul.select__options
                                                li
                                                    input.select__input(type="radio", name="option2", id="option4")
                                                    label.select__label(for="option4") Area
                                                li
                                                    input.select__input(type="radio", name="option2", id="option5")
                                                    label.select__label(for="option5") Area
                                                li
                                                    input.select__input(type="radio", name="option2", id="option6")
                                                    label.select__label(for="option6") Area
                                        .screen__group__input
                                            input.screen__input(type="text", name="input", id="group2")
                                            label.screen__label(for="group2") m#[sup 2]
                                    .screen__group__item
                                        .select
                                            span.select__placeholder Choose one
                                            span.select__arrow #[i(data-feather="chevron-down")]

                                            ul.select__options
                                                li
                                                    input.select__input(type="radio", name="option3", id="option7")
                                                    label.select__label(for="option7") Area
                                                li
                                                    input.select__input(type="radio", name="option3", id="option8")
                                                    label.select__label(for="option8") Area
                                                li
                                                    input.select__input(type="radio", name="option3", id="option9")
                                                    label.select__label(for="option9") Area
                                        .screen__group__input
                                            input.screen__input(type="text", name="input", id="group3")
                                            label.screen__label(for="group3") m#[sup 2]

                        .screen__footer.flex.flex--m-between
                            button.btn.btn__delete(type="button")
                                i(data-feather="delete")
                            button.btn.btn__history(type="button")
                                i(data-feather="clock")

                    .keypad
                        .keypad__calculator
                            .keypad__simple
                                .keypad__container
                                    button.btn.btn__clear.btn__operator(type="button") C
                                    button.btn.btn__delete.btn__operator ()
                                    button.btn.btn__percent.btn__operator(type="button") %
                                    button.btn.btn__operator(type="button") /
                                    button.btn(type="button") 7
                                    button.btn(type="button") 8
                                    button.btn(type="button") 9
                                    button.btn.btn__operator(type="button") &#8727;
                                    button.btn(type="button") 4
                                    button.btn(type="button") 5
                                    button.btn(type="button") 6
                                    button.btn.btn__operator(type="button") -
                                    button.btn(type="button") 1
                                    button.btn(type="button") 2
                                    button.btn(type="button") 3
                                    button.btn.btn__operator(type="button") +
                                    button.btn.btn__operator(type="button") &#177;
                                    button.btn(type="button") 0
                                    button.btn(type="button") .
                                    button.btn.btn__equal(type="button") =
                            .keypad__scientific
                                .keypad__scientific--first
                                    .keypad__container
                                        button.btn(type="button") &#x21cb;
                                        button.btn(type="button") Mod
                                        button.btn(type="button") x!
                                        button.btn(type="button") e
                                        button.btn(type="button") x#[sup 2]
                                        button.btn(type="button") x#[sup y]
                                        button.btn(type="button") &#8730;
                                        button.btn(type="button") #[sup y]&#8730;x
                                        button.btn(type="button") |x|
                                        button.btn(type="button") 2#[sup x]
                                        button.btn(type="button") 10#[sup x]
                                        button.btn(type="button") 1/x
                                        button.btn(type="button") &Pi;
                                        button.btn(type="button") log x
                                        button.btn(type="button") ln

                                .keypad__scientific--second
                                    .keypad__container
                                        button.btn(type="button") &#x21cb;
                                        button.btn(type="button") Rad
                                        button.btn(type="button") hyp
                                        button.btn(type="button") sin
                                        button.btn(type="button") cos
                                        button.btn(type="button") tan
                                        button.btn(type="button") sin#[sup -1]
                                        button.btn(type="button") cos#[sup -1]
                                        button.btn(type="button") tan#[sup -1]
                                        button.btn(type="button") sec
                                        button.btn(type="button") csc
                                        button.btn(type="button") cot
                                        button.btn(type="button") sec#[sup -1]
                                        button.btn(type="button") csc#[sup -1]
                                        button.btn(type="button") cot#[sup -1]

                        .keypad__unit
                            .keypad__container
                                button.btn(type="button") 7
                                button.btn(type="button") 8
                                button.btn(type="button") 9
                                button.btn.btn__delete.btn__operator(type="button") #[i(data-feather="delete")]
                                button.btn(type="button") 4
                                button.btn(type="button") 5
                                button.btn(type="button") 6
                                button.btn.btn__operator.btn__clear(type="button") C
                                button.btn(type="button") 1
                                button.btn(type="button") 2
                                button.btn(type="button") 3
                                button.btn.btn__operator(type="button") &#8593;
                                button.btn.btn__operator.btn__disabled(type="button", disabled) &#177;
                                button.btn(type="button") 0
                                button.btn(type="button") .
                                button.btn.btn__operator(type="button") &#8595;