                                    button.btn(type="button") 2#[sup x]
                                    button.btn(type="button") 10#[sup x]
                                    button.btn(type="button") 1/x
                                    button.btn(type="button") &#8511;
                                    button.btn(type="button") log x
                                    button.btn(type="button") ln

                            .keypad__scientific--second
                                .keypad__container
                                    button.btn(type="button") &#x21cb;
                                    button.btn(type="button") Rad
                                    button.btn(type="button") hyp
                                    button.btn(type="button") sin
                                    button.btn(type="button") cos
                                    button.btn(type="button") tan
                                    button.btn(type="button") sin#[sup -1]
                                    button.btn(type="button") cos#[sup -1]
